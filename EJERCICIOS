# EJERCICIO. 26
i = 1
definitiva = 0
nota = 0
while i<6:
     nota = float(input("Introduzca la nota" + str(i) + ": "))
     if i==1:
        definitiva =definitiva+nota*0.15
     if i==2:
        definitiva =definitiva+nota*0.20
     if i==3:
        definitiva =definitiva+nota*0.15
     if i==4:
        definitiva =definitiva+nota*0.30
     if i==5:
        definitiva =definitiva+nota*0.20
     i+=1
if definitiva < 20:
    print("Lo siento tu nota es: ",definitiva,"No puedes habilitar.")
elif definitiva < 30:
    print(definitiva,"reprobaste :c.")
elif definitiva >= 30 and definitiva<45:
    print("aprobaste con: ", definitiva)
elif nota>45:
    print("Felicitaciones tu nota es: ",definitiva,"Sigue asi :).")

