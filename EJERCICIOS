# EJERCICIO. 29
digito = 0
mayor = 0
menor = 0
i = 1
digito = 1
while i < 4:
    digito = float(input("digito# " + str(i) + "= "))
    if digito > mayor:
        mayor = digito
    if digito < menor or i == 1:
        menor = digito
    i+= 1
print("el valor mayor es el" + str(mayor))
print("el valor menor es el" + str(menor))

