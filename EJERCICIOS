# EJERCICIO. 31
print("Para saber el valor de su tiquete de avion ingrese...")
distancia = int(input("La cantidad  de km que recorrera: "))
estancia = int(input("Los dias de estancia: "))
precio = distancia*5000
if estancia >= 7 and distancia >1000:
    precio = precio - precio*0.15
    print("El precio del pasaje es ",precio)
if distancia <= 20:
    precio = 100000
    print("El monto minimo a pagar de 20kms o menos es: ",precio)
else:
    print("EL precio de su pasaje es: ",precio)
# EJERCICIO. 32
anio = int(input("Introduzca un año: "))
if anio % 4 ==0:
    print("EL año", anio, " Es bisiesto.")
if anio % 100 !=0 and anio % 400 ==0:
    print("EL año", anio, " Es bisiesto.")
else:
    if anio % 100 != 1 and anio % 400 == 1:
        print("El año", anio," no es bisiesto.")

# EJERCICIO. 33
import math
a = int(input("Introduzca numero a: "))
b = int(input(("Introduzca numero b: ")))
c = int(input(("Introduzca numero c: ")))
d = b**2 - 4*a*c
if d >0:
    rpt1 = (-b + math.sqrt(d)) / (2 * a)
    rpt2 = (-b - math.sqrt(d)) / (2 * a)
    print("La respuesta 1 es: ",rpt1)
    print("La respuesta 2 es: ", rpt2)
else:
    print("La ecuacion no tiene valor real.")
